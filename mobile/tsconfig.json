{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "App.tsx", "index.js"],
  "exclude": ["node_modules", "android", "ios"]
}