{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src/**/*", "App.tsx", "index.ts"],
  "exclude": ["node_modules", "android", "ios"]
}
